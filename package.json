{
  "name": "ts-react-spa-ssr-boilerplate",
  "version": "1.0.0",
  "author": "nabeliwo",
  "description": "React SPA boiler plate corresponding to SSR written in TypeScript.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nabeliwo/ts-react-spa-ssr-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/nabeliwo/ts-react-spa-ssr-boilerplate/issues"
  },
  "homepage": "https://github.com/nabeliwo/ts-react-spa-ssr-boilerplate#readme",
  "scripts": {
    "dev": "nodemon ./dist/server.bundle.js",
    "watch": "cross-env NODE_ENV=development webpack --mode development -w",
    "lint:ts": "tslint 'src/**/*.ts{,x}'",
    "lint:css": "stylelint './src/**/*.ts{,x}'",
    "lint": "run-p lint:*",
    "format": "tslint --fix 'src/**/*.ts{,x}'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.16.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.5.0",
    "@types/react": "^16.4.4",
    "@types/react-dom": "^16.0.6",
    "awesome-typescript-loader": "^5.2.0",
    "cross-env": "^5.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "stylelint": "^9.3.0",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "webpack": "^4.12.2",
    "webpack-cli": "^3.0.8",
    "webpack-merge": "^4.1.3"
  }
}
